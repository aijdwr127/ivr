<div class="mb-3 mt-5">
    <h1><b>my docs</b></h1>
</div>

{{#each docs}}
<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative"> 
  <div class="col p-4 d-flex flex-column position-static">
    <strong class="d-inline-block mb-2 text-primary-emphasis">{{author}}</strong>
    <h3 class="mb-0">{{title}}</h3>
    <div class="mb-1 text-body-secondary">{{date}}</div>
    <p class="card-text mb-auto">{{{trimString text 0 70}}}...</p>
    <div>
    <a href="/remove-from-lib/{{_id}}" class="icon-link gap-1 icon-link-hover">
      added
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
      <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
    </svg>
    </a>
    </div>
    <div class="mb-3">
    <a href="/view/{{_id}}" class="icon-link gap-1">
      view
    </a>
    </div>
  </div>
</div>
{{/each}}



{{#if docs}}
{{else}}
  <div class="alert alert-danger" role="alert">you haven't added any docs yet. <a href="/search">search</a> or <a href="/add-docs">add</a> some!</div>
{{/if}}